<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="MenusInXMLActivity" android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button android:text="Toggle Group 2 Checkable"
        android:onClick="group2CheckableClickHandler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button android:text="Toggle Group 2 Enabled"
        android:onClick="group2EnabledClickHandler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button android:text="Toggle Group 2 Visible"
        android:onClick="group2VisibleClickHandler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button android:text="Remove Group"
        android:onClick="group2RemoveClickHandler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
