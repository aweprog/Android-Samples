<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="konceptsandcode.com.simpleservice" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--
            Adding an intent filter makes the service available to other applications

            For example:

        <service
            android:name=".MyIntentService"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.example.MyIntentService"
            </intent-filter>
        </service>


        To start the service, use the startService method as
            startService(new Intent("com.example.MyIntentService"))
        -->
        <service
            android:name=".MyIntentService"
            android:enabled="true"
            android:exported="true" >
        </service>
    </application>

</manifest>
